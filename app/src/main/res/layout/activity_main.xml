<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:background="@drawable/v1"

        android:orientation="vertical">

        <EditText

            android:id="@+id/number"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
           android:inputType="text"
            android:backgroundTint="@color/colorw"
            android:hint="Enter a number"


            android:textColor="@color/colorw"
            android:textColorLink="@color/colorw"
            android:textStyle="bold"
            ></EditText>



        <TextView

            android:textStyle="bold|italic"
            android:gravity="center"
            android:textColor="@color/colorw"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*~ Binary ::" />

        <TextView
            android:id="@+id/enter"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/v"
            android:gravity="center"
            android:textColor="@color/colorP"
            android:textStyle="bold|italic" />


        <TextView
            android:textStyle="bold|italic"
            android:gravity="center"
            android:textColor="@color/colorw"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*~ Decimal ::" />

        <TextView
            android:id="@+id/enter1"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/v"
            android:gravity="center"
            android:textColor="@color/colorP"
            android:textStyle="bold|italic" />


        <TextView
            android:textStyle="bold|italic"
            android:gravity="center"
            android:textColor="@color/colorw"
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*~ Octal ::" />

        <TextView
            android:id="@+id/enter2"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/v"
            android:gravity="center"
            android:textColor="@color/colorP"
            android:textStyle="bold|italic" />

        <TextView
            android:textStyle="bold|italic"
            android:gravity="center"
            android:textColor="@color/colorw"
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*~ Hexadecimal ::" />

        <TextView
            android:id="@+id/enter3"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/v"
            android:gravity="center"
            android:textColor="@color/colorP"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bot1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"


            android:layout_marginBottom="2dp"
            android:background="@drawable/v1"
            android:fitsSystemWindows="true"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu2"
            tools:layout_height="wrap_content">

        </android.support.design.widget.BottomNavigationView>

    </LinearLayout>
</LinearLayout>